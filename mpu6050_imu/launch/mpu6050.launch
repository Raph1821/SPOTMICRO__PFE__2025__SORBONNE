<launch>
  <!-- MPU6050 IMU Node -->
  <node name="mpu6050_imu" pkg="mpu6050_imu" type="mpu6050_node.py" output="screen">
    <!-- I2C Configuration -->
    <param name="i2c_bus" value="1" />        <!-- I2C bus number (1 for RPi) -->
    <param name="i2c_address" value="0x68" /> <!-- MPU6050 default address -->
    
    <!-- Frame ID -->
    <param name="frame_id" value="imu_link" />
    
    <!-- Publishing rate in Hz -->
    <param name="rate" value="50" />
  </node>
</launch>
